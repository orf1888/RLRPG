<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rl_rpg.activity"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="rl_rpg.activity.RLRPGApplication"
        android:allowBackup="true"
        android:description="@string/app_description"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="rl_rpg.activity.StartScreenActivity"
            android:label="@string/app_name" 
            android:noHistory="true"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="rl_rpg.activity.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="rl_rpg.activity.ChallengeListViewActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="rl_rpg.activity.MyAccountActivity"
            android:label="@string/title_activity_my_account" >
        </activity>
        <activity
            android:name="rl_rpg.activity.CommunityActivity"
            android:label="@string/title_activity_community" >
        </activity>
        <activity
            android:name="rl_rpg.activity.PlayerListViewActivity"
            android:label="@string/title_activity_player_list_view" >
        </activity>
        <activity
            android:name="rl_rpg.activity.OtherPlayerAccountActivity"
            android:label="@string/title_activity_other_player_account" >
        </activity>
         <activity
            android:name="rl_rpg.activity.CreateAccountActivity"
            android:label="@string/title_activity_other_player_account" >
        </activity>
    </application>

</manifest>